config interface loopback
	option ifname	lo
	option proto	static
	option ipaddr	::1
	option netmask	128

config interface lan
	option ifname	br-lan
	option proto	auto
	option ra       0

config interface wan
	option ifname	eth0
	option proto	auto
	option ra       0

config interface vlan1
	option ifname	eth0.1
	option proto	auto
	#router advertisment disabled by default, right? 
	#Change when CLI is implemented
	#0:disabled, 1:enabled, 2:enabled(on forwarding as well)
	option ra       1
